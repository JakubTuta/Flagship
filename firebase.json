{
  "hosting": {
    "public": ".output/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": {
          "functionId": "server",
          "region": "us-central1"
        }
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  },
  "functions": [
    {
      "source": ".output/server",
      "codebase": "default",
      "runtime": "nodejs20",
      "memory": "1GB",
      "timeout": "60s"
    }
  ]
}